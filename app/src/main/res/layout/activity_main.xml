<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mesh_pattern"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/clockEditText"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        android:editable="false"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:text="hello"/>

    <Button
        android:id="@+id/clockButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:text="Clock Demo"/>

    <Button
        android:id="@+id/observable"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:text="Observable Demo"/>

    <Button
        android:id="@+id/flowable"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:text="Flowable Demo"/>

    <Button
        android:id="@+id/singleable"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:text="Single Demo"/>

    <Button
        android:id="@+id/completeable"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:text="Complete Demo"/>

    <Button
        android:id="@+id/maybeable"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:text="MayBe Demo"/>


</LinearLayout>